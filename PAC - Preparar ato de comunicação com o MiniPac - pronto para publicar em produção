        </event>
    </task-node>
    <decision expression="#{comunicacaoProcessualAction.getExpedientesPrecatorias().size() &gt; 0 ? 'Encaminhar Carta' : 'JoinComunicacao'}" name="É Carta?">
        <transition to="Encaminhar Carta" name="Encaminhar Carta"/>
